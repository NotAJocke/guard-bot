{
	"name": "guard-bot",
	"version": "0.0.2",
	"description": "",
	"main": "src-bot/index.js",
	"scripts": {
		"bot:run": "node src/client/index.js",
		"bot:dev": "ts-node src/client/index.ts",
		"build": "tsc && pnpm _copy-files && pnpm db:prod",
		"_copy-files": "cp -r prisma dist",
		"clean": "rm -rf dist",
		"db:prod": "node ./scripts/prisma.js",
		"deploy": "pnpm build && pnpm run db:prod && docker-compose build && docker-compose up -d",
		"format": "prettier --write ./src/",
		"husky:prepare": "husky install && husky add .husky/pre-commit \"pnpm lint-staged\npnpm prisma format\""
	},
	"author": "JockeRider199",
	"devDependencies": {
		"@types/ms": "^0.7.31",
		"@types/node": "^18.11.18",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.3",
		"prisma": "^4.12.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"@prisma/client": "^4.12.0",
		"discord.js": "^14.8.0",
		"dotenv": "^16.0.3",
		"ms": "^2.1.3"
	},
	"lint-staged": {
		"**/*.{ts,js,json}": [
			"prettier --write ./src/"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
